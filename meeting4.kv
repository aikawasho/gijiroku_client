MyRoot:


<MyRoot>:

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
     
    orientation:'vertical'

    ScrollView:
        scroll_y:0
        do_scroll_x:False
        Text_Layout:
            size_hint_y: None
    
    Button_Layout:

<Text_Layout>:
    orientation:'vertical'
    spacing: 5
        

<Sentence>:
    id : sentence
    text_validate_unfocus:False

<Play_Button>:
    id : play_button
    text:'再生'

<Seek_Bar>:
    id : play_slider

<Sentence_Layout>:
    size_hint_x : 1
    size_hint_y : None
    y : 30
    height:60
    
    Sentence:
        size_hint_x : 0.6
        size_hint_y : 1
    Play_Button:
        size_hint_x : 0.05
        size_hint_y : 1
    Seek_Bar:
        size_hint_x : 0.35
        size_hint_y : 1
    
<Button_Layout>:

    size_hint_x:1
    size_hint_y:None
    height:50
    
    REC_Button:
        text : '録音開始'
    Input_Button:
        text : 'ファイル選択'
    Summary_Button:
        text : '議事録作成'
    Setting_Button:
        text : '設定'

<REC_Button>:
    background_color:0, .3, .4, .85
    background_normal:''
 
<Input_Button>:
    background_color:0, .2, .2, .85
    background_normal:''

<Setting_Button>:
    background_color:.3, .3, .4, .85
    background_normal:''
    
<Summary_Button>:
    background_color:.3, .5, .4, .85
    background_normal:''
    
    
<SettingMenu>
    orientation: 'vertical'
    FloatLayout:
        Label:
            pos_hint: {'center': (.1, .8)}
            text: 'マイク : '
            
        input_spinner:
            size_hint: None, None
            size: 500, 44
            pos_hint: {'center': (.5, .8)}

        Label:
            pos_hint: {'center': (.1, .5)}
            text: 'スピーカ : '
            
        output_spinner   
            size_hint: None, None
            size: 500, 44
            pos_hint: {'center': (.5, .5)}
            
    Button:
        size_hint: 1,0.1
        text:'閉じる'
        on_release: root.popup_close()

<SummaryMenu>
    orientation: 'vertical'
    FloatLayout:
        Label:
            pos_hint: {'center': (.05, .9)}
            text: '全文 : '
            
        TestInput:
            id: texts
            pos_hint: {'center': (.5, .75)}
            size_hint:0.8,0.4
            text: root.text_output()
            
        Label:
            pos_hint: {'center': (.05, .45)}
            text: '重要 : '
            
        TextInput:  
            id: summary
            size_hint:0.8,0.2
            pos_hint: {'center': (.5, .4)}
            text:root.summary_output()
            
        Label:
            pos_hint: {'center': (.05, .20)}
            text: 'タスク : '
            
        TextInput:   
            id: tasks
            size_hint:0.8,0.2
            pos_hint: {'center': (.5, .15)}
            text:root.task_output()
    BoxLayout: 
        size_hint: 1,0.1

        Button:
            text:'閉じる'
            on_release: root.popup_close()
        Button:
            text:'議事録作成'
            on_release: root.send_giji()
        
<InputMenu>:
    orientation: 'vertical'
    ProgressBar:
        size_hint: 1,0.05
    FileChooser:
        path:'../../'
        filters: ['*.wav']
        FileChooserListLayout
    BoxLayout:
        size_hint:1,0.1    
        
        Button:
            size_hint: 0.5,1
            text:'開く'
            on_release:root.wav_send()
        Button:
            size_hint: 0.5,1
            text:'閉じる'
            on_release: root.popup_close()
        
<input_spinner>:

<LoadingMenu>:
    Label:
        text:'文字起こし中'

<Type_Spinner>:
    values:'','タスク','重要'
    size_hint:None,None
    width:200
    height : 30
    
<TestInput>:
    text_validate_unfocus:False
